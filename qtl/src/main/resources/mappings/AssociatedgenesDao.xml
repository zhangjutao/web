<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gooalgene.qtl.dao.AssociatedgenesDao">

    <select id="findList" resultType="com.gooalgene.entity.Associatedgenes">
        SELECT id,qtl_name,version FROM associatedgenes;
    </select>

    <insert id="insert" parameterType="com.gooalgene.entity.Associatedgenes">
        INSERT INTO associatedgenes(`qtl_name`,`version`,`associated_genes`) VALUES (#{qtlName},#{version},#{associatedGenes})
    </insert>

    <insert id="insertBatch">
        INSERT INTO associatedgenes(`qtl_name`,`version`,`associated_genes`)
        values
        <foreach collection="list" item="item" index="index" separator=",">
                (#{item.qtlName},#{item.version},#{item.associatedGenes})
        </foreach>
    </insert>

    <select id="getByNameAndVersion" resultType="com.gooalgene.entity.Associatedgenes">
        SELECT * FROM associatedgenes WHERE qtl_name = #{name} AND version = #{version}
    </select>

    <select id="findByTypeAllList" resultType="com.gooalgene.entity.Associatedgenes">
        SELECT * FROM associatedgenes
        WHERE 1=1
        <if test="qtlName!=null">
            AND qtl_name LIKE CONCAT('%',#{qtlName},'%')
        </if>
        <if test="version!=null">
            OR version LIKE CONCAT('%',#{version},'%')
        </if>
        <if test="associatedGenes!=null">
            OR associated_genes LIKE CONCAT('%',#{associatedGenes},'%')
        </if>
    </select>

    <select id="findAssociatedgenesById" parameterType="int" resultType="com.gooalgene.entity.Associatedgenes">
        SELECT * FROM associatedgenes WHERE id=#{id}
    </select>

    <select id="findAssociatedGeneByGeneId" resultType="com.gooalgene.entity.Associatedgenes">
        SELECT a.qtl_name FROM associatedgenes a
        LEFT JOIN qtl_gene b ON a.id = b.qtl_id
        LEFT JOIN gens_baseinfo c ON b.gene_info_id = c.id
        WHERE c.id = #{geneId}
    </select>

    <update id="updateAssociatedgenes" parameterType="com.gooalgene.entity.Associatedgenes">
        UPDATE associatedgenes SET qtl_name=#{qtlName},version=#{version},associated_genes=#{associatedGenes} WHERE id=#{id}
    </update>

    <delete id="deleteAssociatedgenes" parameterType="int">
        DELETE FROM associatedgenes WHERE id=#{id}
    </delete>

</mapper>