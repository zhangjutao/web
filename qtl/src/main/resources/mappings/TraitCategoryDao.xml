<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gooalgene.qtl.dao.TraitCategoryDao">
    
    <resultMap id="traitCategoryResultMap" type="com.gooalgene.qtl.views.TraitCategoryWithinMultipleTraitList">
        <id property="traitCategoryId" column="traitCategoryId" jdbcType="INTEGER" javaType="int" />
        <result property="qtlDesc" column="qtl_desc" javaType="String" jdbcType="VARCHAR"/>
        <collection property="traitLists" column="qtl_id" ofType="com.gooalgene.qtl.views.TraitListWithinMultipleQtlName">
            <result property="traitListId" column="traitListId" javaType="int" />
            <result property="qtlId" column="qtl_id" javaType="int" jdbcType="INTEGER" />
            <result property="traitName" column="trait_name" javaType="String" jdbcType="VARCHAR" />
            <collection property="qtls" column="trait" ofType="com.gooalgene.entity.Qtl">
                <result property="id" column="qtl_primary_id" javaType="String" />
                <result property="qtlName" column="qtl_name" javaType="String" jdbcType="VARCHAR" />
                <result property="associatedGenesId" column="associatedGenes_id" javaType="int" />
            </collection>
        </collection>
    </resultMap>

    <select id="findList" resultType="com.gooalgene.entity.TraitCategory">
        SELECT * FROM trait_category;
    </select>

    <select id="findAllList" resultType="com.gooalgene.entity.TraitCategory">
        SELECT * FROM trait_category;
    </select>

    <select id="findById" parameterType="int" resultType="com.gooalgene.entity.TraitCategory">
        SELECT * FROM trait_category WHERE id=#{id};
    </select>

    <insert id="add" parameterType="com.gooalgene.entity.TraitCategory">
        INSERT INTO trait_category (qtl_name,qtl_desc,qtl_othername,qtl_createtime) VALUES(#{qtlName},#{qtlDesc},#{qtlOthername},NOW())
    </insert>

    <insert id="insertBatch">
        INSERT INTO trait_category (qtl_name,qtl_desc,qtl_othername,qtl_createtime)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            ( #{item.qtlName}, #{item.qtlDesc},#{item.qtlOthername},NOW())
        </foreach>
    </insert>

    <update id="update" parameterType="com.gooalgene.entity.TraitCategory">
        UPDATE trait_category SET qtl_name=#{qtlName},qtl_desc=#{qtlDesc},qtl_othername=#{qtlOthername},qtl_createtime=NOW() WHERE id=#{id};
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM trait_category WHERE id=#{id};
    </delete>

    <select id="get" resultType="com.gooalgene.entity.TraitCategory">
        SELECT * FROM trait_category WHERE qtl_name = #{id}
    </select>

    <select id="findAllTraitCategoryAndItsTraitList" resultMap="traitCategoryResultMap">
        SELECT
            a.id as traitCategoryId,
            a.qtl_desc, b.id as traitListId,
            b.qtl_id, b.trait_name,
            c.qtl_name,
            c.id AS qtl_primary_id,
            c.associatedGenes_id
        FROM trait_category a
            LEFT JOIN category_associate_trait d ON a.id = d.trait_category_id
            LEFT JOIN trait_list b ON d.trait_list_id = b.id
            LEFT JOIN qtl c ON b.trait_name = c.trait
    </select>
</mapper>