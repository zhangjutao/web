<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gooalgene.qtl.dao.UserDao">


    <select id="queryAll" resultType="com.gooalgene.entity.User">
        SELECT * FROM user
    </select>

    <insert id="insert">
        INSERT INTO user(username,password) VALUES (#{username},#{password})
    </insert>

    <select id="findList" resultType="com.gooalgene.entity.User">
        SELECT * FROM user
    </select>

    <select id="findByUsername" parameterType="string" resultType="com.gooalgene.entity.User">
        SELECT * FROM user WHERE username=#{username}
    </select>

    <select id="findByUsernameAndPassword" parameterType="com.gooalgene.entity.User" resultType="com.gooalgene.entity.User">
        SELECT * FROM user WHERE username=#{username} AND password=#{password}
    </select>


</mapper>