<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gooalgene.qtl.dao.TraitListDao">

    <select id="findList" resultType="com.gooalgene.entity.TraitList">
        SELECT * FROM trait_list;
    </select>

    <select id="findAllList" resultType="com.gooalgene.entity.TraitList">
        SELECT * FROM trait_list;
    </select>

    <select id="findById" resultType="com.gooalgene.entity.TraitList">
        SELECT * FROM trait_list WHERE id = #{id}
    </select>

    <select id="getTraitListsByQtlId" resultType="com.gooalgene.entity.TraitList">
        SELECT * FROM trait_list WHERE id = #{id}
    </select>

    <insert id="add" parameterType="com.gooalgene.entity.TraitList">
        INSERT INTO trait_list (trait_name,trait_createtime) VALUES(#{qtlId},#{traitName},NOW())
    </insert>

    <insert id="insertBatch">
        INSERT INTO trait_list (trait_name,trait_createtime)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            ( #{item.qtlId}, #{item.traitName},NOW())
        </foreach>
    </insert>

    <update id="update" parameterType="com.gooalgene.entity.TraitList">
        UPDATE trait_list SET trait_name=#{traitName},trait_createtime=NOW() WHERE id=#{id};
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM trait_list WHERE id=#{id};
    </delete>

</mapper>