<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gooalgene.qtl.dao.SoybeanDao">

    <select id="findList" resultType="com.gooalgene.entity.Soybean">
        SELECT * FROM soybean;
    </select>

    <select id="get" resultType="com.gooalgene.entity.Soybean">
        SELECT * FROM soybean WHERE category_name = #{id}
    </select>

    <select id="findSoyBeanById" parameterType="int" resultType="com.gooalgene.entity.Soybean">
        SELECT * FROM soybean WHERE id = #{id}
    </select>

    <insert id="save" parameterType="com.gooalgene.entity.Soybean">
        INSERT INTO soybean (category_name,category,list_name,qtl_name) VALUES(#{categoryName},#{category},#{listName},#{qtlName})
    </insert>

    <insert id="insertBatch">
        INSERT INTO soybean (category_name,category,list_name,qtl_name)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            ( #{item.categoryName}, #{item.category},#{item.listName},#{item.qtlName})
        </foreach>
    </insert>

    <update id="updateSoybean" parameterType="com.gooalgene.entity.Soybean">
        UPDATE soybean SET category_name=#{categoryName},category=#{category},list_name=#{listName},qtl_name=#{qtlName} WHERE id=#{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM soybean WHERE id=#{id}
    </delete>

</mapper>