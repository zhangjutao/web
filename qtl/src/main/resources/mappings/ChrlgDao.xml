<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gooalgene.qtl.dao.ChrlgDao">

    <select id="findList" resultType="com.gooalgene.entity.Chrlg">
        SELECT * FROM chrlg WHERE 1=1
        <if test="version!=null">
            AND version=#{version}
        </if>
    </select>

    <select id="findAllList" resultType="com.gooalgene.entity.Chrlg">
        SELECT * FROM chrlg
    </select>

    <select id="get" resultType="com.gooalgene.entity.Chrlg">
        SELECT * FROM chrlg WHERE id=#{id}
    </select>

    <insert id="insert" parameterType="com.gooalgene.entity.Chrlg">
        INSERT INTO `chrlg`(`chr`,`lg`,`version`,`bps`,`cMs`,`cm_bp`) VALUES (#{chr}, #{lg},#{version},#{bps},#{cMs},#{cmBp})
    </insert>

    <insert id="insertBatch">
        INSERT INTO `chrlg`(`chr`,`lg`,`version`,`bps`,`cMs`,`cm_bp`)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            (#{item.chr,jdbcType=VARCHAR},
            #{item.lg,jdbcType=VARCHAR},
            #{item.version,jdbcType=VARCHAR},
            #{item.bps,jdbcType=INTEGER},
            #{item.cMs,jdbcType=FLOAT},
            #{item.cmBp,jdbcType=INTEGER})
        </foreach>
    </insert>

    <select id="selectByChrAndLg" resultType="com.gooalgene.entity.Chrlg">
        SELECT * FROM chrlg WHERE chr=#{chr} AND lg=#{lg}
    </select>

    <select id="selectByChrAndVersion" resultType="com.gooalgene.entity.Chrlg">
        SELECT * FROM chrlg WHERE chr=#{chr} AND version=#{version}
    </select>

    <update id="update" parameterType="com.gooalgene.entity.Chrlg">
        UPDATE chrlg SET chr=#{chr},lg=#{lg},version=#{version},bps=#{bps},cMs=#{cMs},cm_bp=#{cmBp} WHERE id=#{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE FROM chrlg WHERE id=#{id};
    </delete>
</mapper>