<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gooalgene.common.dao.CUserDao">

    <select id="get" resultType="com.gooalgene.common.authority.CUser">
        SELECT * FROM cuser WHERE id = #{id}
    </select>

    <select id="queryAll" resultType="com.gooalgene.common.authority.CUser">
        SELECT * FROM cuser
    </select>

    <select id="findByEnable" resultType="com.gooalgene.common.authority.CUser">
        SELECT * FROM cuser WHERE enabled = #{enable}
    </select>

    <select id="findByReset" resultType="com.gooalgene.common.authority.CUser">
        SELECT * FROM cuser WHERE reset = #{reset}
    </select>

    <insert id="insert">
        INSERT INTO cuser(username,email,password,phone,domains,university,enabled) VALUES
          (#{username},#{email},#{password},#{phone},#{domains},#{university},0)
    </insert>

    <select id="findByUsername" parameterType="string" resultType="com.gooalgene.common.authority.CUser">
        SELECT * FROM cuser WHERE username=#{username}
    </select>

    <update id="updateUserEnabled" parameterType="com.gooalgene.common.authority.CUser">
        UPDATE cuser SET enabled = #{enabled} WHERE id = #{id}
    </update>

    <update id="updateUserPassword" parameterType="com.gooalgene.common.authority.CUser">
        UPDATE cuser set password = #{password}, reset = ${reset} WHERE id = #{id}
    </update>

    <update id="updateUserForReset" parameterType="com.gooalgene.common.authority.CUser">
        UPDATE cuser SET reset = #{reset} WHERE id = #{id}
    </update>

    <!--此处添加设置role-->
    <insert id="setRole" parameterType="com.gooalgene.common.authority.User_Role">
        INSERT INTO user_role(user_id,role_id)VALUE (#{user_id},#{role_id});
    </insert>


</mapper>