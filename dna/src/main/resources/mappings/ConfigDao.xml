<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.gooalgene.common.dao.ConfigDao">
    <select id="getAllConfig" parameterType="list" resultType="com.gooalgene.entity.Configuration">
        SELECT
            prop_key as "key",
            prop_value as "value"
        FROM db_config
    </select>

    <select id="findValueByKey" parameterType="String" resultType="com.gooalgene.entity.Configuration">
        SELECT
          prop_key AS "key",
          prop_value AS "value"
         FROM db_config WHERE prop_key=#{key}
    </select>

    <select id="findKeyByValue" parameterType="String" resultType="com.gooalgene.entity.Configuration">
        SELECT
          prop_key AS "key",
          prop_value AS "value"
         FROM db_config WHERE  prop_value=#{value}
    </select>

</mapper>