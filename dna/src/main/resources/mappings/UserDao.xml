<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gooalgene.common.dao.UserDao">

    <resultMap id="userInfo" type="com.gooalgene.common.authority.User">
        <result column="create_time" property="create_time" jdbcType="TIMESTAMP" javaType="java.util.Date"/>
        <result column="due_time" property="due_time" jdbcType="TIMESTAMP" javaType="java.util.Date"/>
    </resultMap>

    <select id="get" resultType="com.gooalgene.common.authority.User" resultMap="userInfo">
        SELECT * FROM user WHERE id = #{id}
    </select>

    <select id="queryAll" resultType="com.gooalgene.common.authority.User">
        SELECT * FROM user ORDER BY create_time DESC
    </select>

    <select id="queryByPage" resultType="com.gooalgene.common.authority.User">
        SELECT * FROM user
    </select>
    <select id="getCount" resultType="java.lang.Long">
        SELECT count(1) from user
    </select>

    <select id="findByEnable" resultType="com.gooalgene.common.authority.User">
        SELECT * FROM user WHERE enabled = #{enable}
    </select>

    <select id="findByReset" resultType="com.gooalgene.common.authority.User">
        SELECT * FROM user WHERE reset = #{reset}
    </select>

    <insert id="insert">
        <selectKey resultType="int" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO user(username,email,password,phone,domains,university,create_time,due_time,enabled) VALUES
        (#{username},#{email},#{password},#{phone},#{domains},#{university},#{create_time},#{due_time},0)
    </insert>
    <insert id="insertTemp">
        <selectKey resultType="int" order="AFTER" keyProperty="id">
            SELECT LAST_INSERT_ID() AS id
        </selectKey>
        INSERT INTO user(username,email,password,phone,domains,university,create_time,due_time,enabled) VALUES
        (#{username},#{email},#{password},#{phone},#{domains},#{university},#{create_time},#{due_time},1)
    </insert>

    <select id="findLastInsertId" resultType="java.lang.Integer">
        SELECT LAST_INSERT_ID()
    </select>
    <select id="findByUsername" parameterType="string" resultType="com.gooalgene.common.authority.User">
        SELECT * FROM user WHERE username=#{username}
    </select>

    <update id="updateUserEnabled" parameterType="com.gooalgene.common.authority.User">
        UPDATE user SET enabled = #{enabled} WHERE id = #{id}
    </update>

    <update id="updateUserPassword" parameterType="com.gooalgene.common.authority.User">
        UPDATE user set password = #{password}, reset = ${reset} WHERE id = #{id}
    </update>

    <update id="updateUserForReset" parameterType="com.gooalgene.common.authority.User">
        UPDATE user SET reset = #{reset} WHERE id = #{id}
    </update>

    <!--此处添加设置role-->
    <insert id="setRole" parameterType="com.gooalgene.common.authority.User_Role">
        INSERT INTO user_role(user_id,role_id)VALUE (#{user_id},#{role_id});
    </insert>
    <!--更新用户的登录次数-->
    <update id="updateUserLoginCount" parameterType="com.gooalgene.common.authority.User">
        UPDATE user SET logincount=#{loginCount} WHERE id=#{id}
    </update>

    <delete id="deleteUser">
        DELETE from user WHERE id=#{id}
    </delete>

</mapper>