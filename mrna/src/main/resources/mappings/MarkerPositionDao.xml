<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gooalgene.qtl.dao.MarkerPositionDao">

    <select id="findList" resultType="com.gooalgene.entity.MarkerPosition">
        SELECT * FROM marker_position WHERE 1=1
        <if test="chr!=null">
            AND chr = #{chr}
        </if>
        <if test="version!=null">
            AND version = #{version}
        </if>

    </select>

    <select id="findByTypeAllList" resultType="com.gooalgene.entity.MarkerPosition">
        SELECT * FROM marker_position WHERE 1=1
        <if test="markerName!=null">
            AND marker_name LIKE CONCAT('%',#{markerName},'%')
        </if>
        <if test="markerType!=null">
            OR marker_type LIKE CONCAT('%',#{markerType},'%')
        </if>
        <if test="version!=null">
            OR version LIKE CONCAT('%',#{version},'%')
        </if>
        <if test="chr!=null">
            OR chr LIKE CONCAT('%',#{chr},'%')
        </if>
    </select>

    <insert id="insert" parameterType="com.gooalgene.entity.MarkerPosition">
        INSERT INTO `marker_position` ( `marker_name`,`chr`, `marker_type`, `version`, `start_pos`, `end_pos`)
       VALUES ( #{markerName}, #{chr},#{markerType},#{version},#{startPos},#{endPos});
    </insert>

    <insert id="insertBatch">
        INSERT INTO `marker_position` ( `marker_name`,`chr`, `marker_type`, `version`, `start_pos`, `end_pos`)
        values
        <foreach collection="list" item="item" index="index" separator=",">
            ( #{item.markerName}, #{item.chr},#{item.markerType},#{item.version},#{item.startPos},#{item.endPos})
        </foreach>
    </insert>

    <select id="findAllList" resultType="com.gooalgene.entity.MarkerPosition">
        SELECT * FROM marker_position
    </select>

    <select id="findById" parameterType="int" resultType="com.gooalgene.entity.MarkerPosition">
        SELECT * FROM marker_position WHERE id=#{id}
    </select>

    <update id="update" parameterType="com.gooalgene.entity.MarkerPosition">
        UPDATE marker_position SET marker_name=#{markerName},chr=#{chr},marker_type=#{markerType},version=#{version},
        start_pos=#{startPos},end_pos=#{endPos}
        WHERE id=#{id}
    </update>

    <delete id="deleteById" parameterType="int">
        DELETE  FROM  marker_position WHERE id=#{id}
    </delete>

</mapper>